@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Sample Weblog</h1>
            <p class="lead text-muted">This is a sample weblog home page.</p>
            <p>
                <a href="#" class="btn btn-primary my-2">New Blog</a>
                <a href="#" class="btn btn-secondary my-2">Archive</a>
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @{
                foreach (var item in Model.Blogs)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="~/img/@{@item.Picture}.png" alt="@item.PictureAlt" class="bd-placeholder-img card-img-top" width="100%" height="225" />
                            <div class="card-body">
                                <h3>@item.Title</h3>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-primary" asp-page="./BlogDetail" asp-route-id="@item.Id">View</a>
                                        <a class="btn btn-sm btn-danger" asp-route-id="@item.Id" asp-page-handler="Delete">Delete</a>
                                    </div>
                                    <small class="text-muted">Date: @item.CreateDate</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
